---
import LinkButton from '../common/LinkButton.astro'

interface Props {
    title :  string
    company : string
    date: string
    description : string
    link ?: string
    logo ?: any
}


const { company , date, title, description, link , logo } =  Astro.props

---


<div class="absolute w-3 h-3 rounded-full mt-6 -start-1.5 border
border-violet bg-violet  dark:border-sky  dark:bg-sky"
>
</div>



<div class="
    px-4 py-4
    rounded-xl
    transition-all duration-100 ease-in-out transform-gpu
    box-content
    drop-shadow-2xl
">
<time class="
    md:text-sm text-xs 
    font-normal leading-none
    text-neutral-700 dark:text-sky-100/80 ml-12">
    { date }
</time>

<h3 class="
    hover:underline hover:decoration-dotted
    text-md md:text-lg font-semibold text-violet-700/90 dark:text-sky
    flex  gap-x-4 items-center mt-2 ">
    <div class="
    relative flex
    rounded-full
    justify-center items-center
    bg-gray-300/90 dark:bg-zinc-800
    px-[3.5px] py-[3.5px]
    box-content shrink-0
    shadow-lg shadow-zinc-900/20
   ring-1 ring-zinc-900/5 dark:border dark:border-zinc-700/50dark:ring-0">
        <img src={logo} alt={company} class="
        size-6
        object-contain aspect-square"/>
    </div>

    <span class="flex-1">{ title }</span>
</h3>

<h4 class="
    text-md md:text-lg
    font-extralight font-stretch-semi-expanded text-violet dark:text-sky
    items-center ml-12 ">
    { company }
</h4>

<p class="mb-4 text-sm md:text-base font-normal  dark:text-gray-400 ml-12">
    { description }
</p>

{
    link && (
            <LinkButton link={ link } className="ml-12 group">
                Learn more...

                <svg class="w-3 h-3 ms-2 rtl:rotate-180 transition-transform duration-200 group-hover:translate-x-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                </svg>
            </LinkButton>

    )
}
</div>